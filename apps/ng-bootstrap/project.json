{
  "name": "ng-bootstrap",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "angular-monorepo",
  "sourceRoot": "apps/ng-bootstrap/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ng-bootstrap",
        "index": "apps/ng-bootstrap/src/index.html",
        "main": "apps/ng-bootstrap/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/ng-bootstrap/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/ng-bootstrap/src/favicon.ico", "apps/ng-bootstrap/src/assets"],
        "styles": [
          "apps/ng-bootstrap/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "ng-bootstrap:build:production"
        },
        "development": {
          "buildTarget": "ng-bootstrap:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "ng-bootstrap:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/ng-bootstrap/**/*.ts", "apps/nebular/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/ng-bootstrap/jest.config.ts"
      }
    }
  }
}
